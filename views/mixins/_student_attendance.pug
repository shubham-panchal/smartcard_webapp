mixin attendance(lecture, userId)
    .all-lectures 
        //- a(href=`/faculty/all-courses/${courseDetails[0].courseId}/${lecture.lectureNumber.match(/\d+/)}`) 
        .item.attendance
            .item-wrapper.lectures-item-wrapper.attendance-wrapper
                .item-day=lecture.lectureDay
                .item-day=lecture.lectureTime
                .item-number=lecture.lectureNumber
                .item-date=lecture.lectureDate
                if lecture.attendance.includes(userId)
                    .attendance__type.attendance__type--present Present
                else
                    .attendance__type.attendance__type--absent  Absent
